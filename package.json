{
  "name": "code-bro-bot",
  "version": "0.0.1",
  "description": "it's code, bro",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "dev": "nodemon --watch src --ext ts --exec ts-node src/index.ts",
    "test": "nyc --reporter=text mocha -r ts-node/register --recursive \"./**/*.test.ts\"",
    "lint": "eslint ./**/*.ts --fix",
    "build": "rm -rf dist && tsc"
  },
  "husky": {
    "hooks": {
      "pre-commit": "tsc --noEmit && npm run lint && npm test"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/acdibble/code-bro-bot.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/acdibble/code-bro-bot/issues"
  },
  "homepage": "https://github.com/acdibble/code-bro-bot#readme",
  "devDependencies": {
    "@types/chai": "^4.2.9",
    "@types/chai-as-promised": "^7.1.2",
    "@types/chai-http": "^4.2.0",
    "@types/express": "^4.17.2",
    "@types/mocha": "^7.0.1",
    "@types/node": "^13.9.4",
    "@types/sinon": "^7.5.2",
    "@typescript-eslint/eslint-plugin": "^2.19.2",
    "@typescript-eslint/parser": "^2.19.2",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "chai-http": "^4.3.0",
    "eslint": "^6.8.0",
    "eslint-config-airbnb-base": "^14.1.0",
    "eslint-plugin-import": "^2.20.1",
    "husky": "^4.2.3",
    "mocha": "^7.1.1",
    "nock": "^12.0.3",
    "nodemon": "^2.0.2",
    "nyc": "^15.0.0",
    "sinon": "^9.0.1",
    "ts-node": "^8.8.1",
    "typescript": "^3.8.3"
  },
  "dependencies": {
    "dotenv": "^8.2.0",
    "express": "^4.17.1"
  },
  "nyc": {
    "extension": [
      ".ts"
    ],
    "exclude": [
      "src/types",
      "src/**/*.test.ts"
    ],
    "include": [
      "src/**/*.ts"
    ],
    "branches": 100,
    "lines": 100,
    "functions": 100,
    "statements": 100,
    "check-coverage": true
  }
}
